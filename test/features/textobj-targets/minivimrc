set nocompatible
let &rtp = 'targets.vim,' . &rtp
let &rtp = 'vim-gitgutter,' . &rtp
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

" let g:vimtex_text_obj_variant = 'vimtex'

augroup vimrc
  autocmd!
  autocmd VimEnter * ++nested call Startup()
augroup END

function! Startup() abort
  silent edit minimal.tex
  normal! 16ggf}h
  normal vac
endfunction
